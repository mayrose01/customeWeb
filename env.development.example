# 开发环境配置模板
# 复制此文件为 .env.development 并填入真实值

ENVIRONMENT=development
DEBUG=true

# 开发环境数据库配置
DATABASE_URL=mysql+pymysql://root:root@localhost:3306/enterprise_dev

# JWT 配置
SECRET_KEY=dev-secret-key-2024-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 开发环境CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002", "http://localhost:8080"]

# 邮件配置（开发环境可以使用测试邮箱）
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-dev-email@gmail.com
SMTP_PASSWORD=your-dev-app-password
SMTP_USE_TLS=true

# 文件上传配置
UPLOAD_DIR=uploads_dev
MAX_FILE_SIZE=2097152
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE=logs/app_dev.log

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# 前端配置
VITE_API_BASE_URL=http://localhost:8000/api
VITE_APP_TITLE=企业官网-开发环境
